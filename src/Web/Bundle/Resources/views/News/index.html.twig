{% extends 'WebBundle::layout.html.twig' %}
{% block content %}
    {% trans_default_domain "WebBundle" %}
    <div class="blog">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                <ol class="breadcrumb">
                    <li>Главная</li>
                    <li class="active">Новости</li>
                </ol>
                    </div>
                <div class="col-xs-12 col-md-12 col-sm-12">
                    <div class="row">
                        <div class="col-xs-12 col-md-12 col-sm-12">
                            <div class="post_wrap">
                                <div class="row">
                                    {% for entity in pagination %}
                                        <div class="col-xs-12 col-md-6 col-sm-12">
                                            <div class="wrap">
                                                {% if entity.getMedia %}
                                                    <img src="{% path entity.getMedia, 'blog' %}">
                                                {% endif %}
                                                <div class="data_wrap">
                                                    <p class="date"> {% if entity.created %}
                                                            {{ entity.created|date('d.m.y H:i') }}
                                                        {% endif %}</p>
                                                    <h3>
                                                        {{ entity.title }}
                                                    </h3>
                                                    <p>
                                                        {{ entity.description }}
                                                        <a class="more" href="{{ path('ant_news_show', { 'slug': entity.slug, 'id': entity.id }) }}">
                                                            {{ 'news.read'|trans }}
                                                        </a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
