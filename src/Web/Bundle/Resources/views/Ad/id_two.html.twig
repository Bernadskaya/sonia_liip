<div id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-sm-12">
                <div class=" container TitleSection">
                    <header class="page-head">
                        {% for entity in entities if entity.getAdGroup.id == '2'  %}
                            {% if loop.first %}
                                <h1>{{ entity.getAdGroup.title }}</h1>
                            {% endif %}
                        {% endfor %}
                    </header>
                </div>
                <div class="row">
                    <div class="ser_wrap_3 option3">
                        <ul>
                            {% for entity in entities if entity.getAdGroup.id == '2'  %}
                                    <li class="col-xs-12 col-sm-12 col-md-12">
                                        <div>
                                            {% if entity.getMedia %}
                                                <img src="{% path entity.getMedia, 'small' %}">
                                            {% endif %}
                                        </div>
                                        <div class="wrap">
                                            <h3>{{ entity.title }}</h3>
                                            {{ entity.text|raw('html') }}
                                        </div>
                                    </li>
                            {% endfor %}
                        </ul>
                        <div class="row">
                            <div class="text-center">
                            <a href="{{ path('order_new') }}" class="btn btn-lg btn-default">Заказать фотосессию</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>